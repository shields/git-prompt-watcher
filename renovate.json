{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "pep621"
      ],
      "groupName": "Python dependencies",
      "schedule": [
        "before 6am on monday"
      ]
    },
    {
      "matchManagers": [
        "dockerfile"
      ],
      "groupName": "Docker images",
      "schedule": [
        "before 6am on monday"
      ]
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions",
      "schedule": [
        "before 6am on monday"
      ]
    }
  ],
  "pep621": {
    "managerFilePatterns": [
      "/tests/pyproject\\.toml$/"
    ]
  },
  "dockerfile": {
    "managerFilePatterns": [
      "/tests/Dockerfile$/"
    ]
  },
  "github-actions": {
    "managerFilePatterns": [
      "/\\.github/workflows/.*\\.ya?ml$/"
    ]
  },
  "pinDigests": true,
  "separateMinorPatch": false,
  "prHourlyLimit": 2,
  "prConcurrentLimit": 10,
  "rangeStrategy": "bump",
  "semanticCommits": "enabled",
  "timezone": "UTC"
}
